<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>

    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title" style="text-align: center;">Register</h5>
            <%msg.forEach(el =>{%>
                <p style="color: red;">! <%=el%></p>
            <%})%>
            <form action="/register" method="post">
                <div class="mx-auto p-2" style="width: 200px;">
                    <label for="exampleInputEmail1" class="form-label">Name</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="name">
                </div>
                <div class="mx-auto p-2" style="width: 200px;">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                </div>
                <div class="mx-auto p-2" style="width: 200px;">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1"name="password">
                </div>
                <div class="mx-auto p-2" style="width: 200px;">
                    <label for="exampleInputEmail1" class="form-label">Phone</label>
                    <input type="number" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="phone">
                </div>
                <div class="mx-auto p-2" style="width: 200px;">
                    <label for="exampleInputEmail1" class="form-label">Goals</label>
                    <input type="textarea" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="goals">
                </div>
                <div style="text-align: center;">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
                <a href="/login">login?</a>
            </form>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>